<Window x:Class="task_manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task_manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="File" Width="75" Height="30" Margin="10,0,10,0"/>
            <Button Content="New Task" Width="75" Height="30" Margin="10,0,10,0"/>
            <Label Content="{Binding CurrentDate}" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <DataGrid ItemsSource="{Binding Tasks}"
                      SelectedItem="{Binding SelectedTask}"
                      CanUserAddRows="False" CanUserDeleteRows="False"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Task" Binding="{Binding Name}" Width="7*"/>
                    <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate}" Width="3*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Column="1">
                <Label Content="Name"/>
                <TextBox Text="{Binding SelectedItem.Name, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="Due Date"/>
                <TextBox Text="{Binding SelectedItem.DueDate, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="Description"/>
                <TextBox Text="{Binding SelectedItem.Description, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button Content="Canel" Width="75" Height="30" Margin="20,0,20,0"/>
                <Button Content="Save" Width="75" Height="30" Margin="20,0,20,0"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
