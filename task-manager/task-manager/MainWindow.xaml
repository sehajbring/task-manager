<Window x:Class="task_manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task_manager"
        mc:Ignorable="d"
        Title="Task Manager" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="{x:Type DataGrid}">
            <Style.Setters>
                <Setter Property="Background" Value="{Binding Path=StatusColor}"/>
            </Style.Setters>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <Button Content="New Task" Width="75" Height="30" Margin="10,0,10,0" Command="{Binding AddTaskCommand}"/>
            <Label Content="{Binding CurrentDate, StringFormat= 'Current Date: {0}'}" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <DataGrid Name="TaskDataGrid"
                      ItemsSource="{Binding Tasks}"
                      SelectedItem="{Binding SelectedTask}"
                      CanUserAddRows="False" CanUserDeleteRows="False"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Task" Binding="{Binding Name}" Width="7*" />
                    <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate}" Width="3*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel x:Name="mainStackPanel" Grid.Column="1" Margin="10,0,10,0" Background="{Binding ChangeColor}">
                <Label Content="Name"/>
                <TextBox Text="{Binding SelectedTask.Name, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="Due Date"/>
                <DatePicker x:Name="DueDateSelector" SelectedDateFormat="Short" SelectedDate="{Binding SelectedTask.DueDate}"/>
                <Label Content="Description"/>
                <TextBox Text="{Binding SelectedTask.Description, UpdateSourceTrigger=PropertyChanged}" Height="170"/>
                <CheckBox Content="Completed" Command="{Binding SelectedTask.Completed, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Button Content="Delete" Width="75" Height="30" Margin="20,0,20,0" Command="{Binding DeleteTaskCommand}"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
