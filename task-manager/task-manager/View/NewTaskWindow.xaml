<Window x:Class="task_manager.View.NewTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:task_manager.View"
        mc:Ignorable="d"
        Title="Create New Task" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Create a new task:" FontWeight="Bold" Grid.Column="1" HorizontalAlignment="Center" FontSize="20"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height=".1*"/>
                <RowDefinition/>
                <RowDefinition Height=".1*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".3*"/>
                    <ColumnDefinition Width=".7*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical" Grid.Column="0">
                <Label Content="Task name: " HorizontalAlignment="Right" Margin="5, 5, 5, 5"/>
                <Label Content="Due Date: " HorizontalAlignment="Right" Margin="5, 5, 5, 5"/>
                <Label Content="Description: " HorizontalAlignment="Right" Margin="5, 5, 5, 5"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Column="1">
                    <TextBox Name="taskNameCreated" Text="{Binding TaskName}" HorizontalAlignment="Left" Width="300" Grid.Column="1" Height="20" VerticalAlignment="Top" Margin="5, 5, 5, 5"/>
                    <DatePicker Grid.Column="1" Text="{Binding TaskDueDate}" Margin="5, 15, 5, 5"/>
                    <TextBox Text="{Binding TaskDescription}" FontStyle="Normal" Width="300" Height="200" HorizontalAlignment="Left" Margin="5, 10, 5, 5"/>
                </StackPanel>
            </Grid>
        </Grid>
        <Button Content="Cancel" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="50" Margin="5,5,5,20" IsCancel="True"/>
            <Button Content="Save" Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="50" Margin="5,5,5,20" Command="{Binding SaveNewTaskCommand}" IsCancel="True"/>
    </Grid>
</Window>
